/* Crie um algoritmo que leia dois números e calcule a média.*/


programa {
  funcao inicio() {
    real numeroUm, numeroDois, media

   escreva("Escreva sua media número um: ")
   leia(numeroUm)
   escreva("Escreva sua media número dois: ")
   leia(numeroDois)
   media = (numeroUm + numeroDois)/2
   escreva("Sua media é: ", media)
  }
}
